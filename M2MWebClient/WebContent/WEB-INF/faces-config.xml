<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>authorization</from-outcome>
			<to-view-id>/content/authorization.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>createUser</from-outcome>
			<to-view-id>/content/createuser.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>page</from-outcome>
			<to-view-id>/template/te/page.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>menu</from-outcome>
			<to-view-id>/content/menu.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<validator>
		<validator-id>validator.hibernate</validator-id>
		<validator-class>com.navigrad.m2m.webclient.validate.WebValidator</validator-class>
	</validator>
</faces-config>
